<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MathTank" parent="Theme.AppCompat">
        <item name="color">@color/white</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title" parent="Theme.MathTank">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HighscoreEntry" parent="Theme.MathTank">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="HighscoreNumber" parent="Theme.MathTank">
        <item name="android:textSize">60sp</item>
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="HighscoreSubEntry" parent="Theme.MathTank">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="BaseLinearLayout" parent="Theme.MathTank">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="GameButton">
        <item name="android:textSize">15sp</item>
    </style>

</resources>